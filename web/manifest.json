{
    "manifest_version": 3,
    "version": "1.0",
    "minimum_chrome_version": "100",
    "name": "SpikerBot",
    "short_name": "SpikerBot",
    "description": "Discover SpikerBots: Your Gateway to the World of Neuroscience!",
    "start_url": ".",
    "display": "standalone",
    "background_color": "#1996FC",
    "theme_color": "#fd8164",
    "orientation": "landscape-primary",
    "prefer_related_applications": true,
    "omnibox": { "keyword" : "spikerbot" },
    "incognito": "split",
    "related_applications": [
        {
            "platform": "play",
            "id": "com.backyardbrains.neurorobot"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Show SpikerBot"
    },
    "permissions": ["tabs"],
    "cross_origin_embedder_policy": {
        "value": "require-corp"
    },
    "cross_origin_opener_policy": {
        "value": "same-origin"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "icons": {
        "48": "icons/Byb-Icon-48.png",
        "128": "icons/Byb-Icon-128.png"
    },
    "browser_action": {
        "default_popup": "popup.html" 
    }    

}
